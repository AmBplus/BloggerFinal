@page
@model MasterArticleBlogger.Areas.Adminstrator.Pages.ArticleManagement.CreateModel
@{
}
<div class="content">

    <div class="container">
        <div class="row align-items-stretch no-gutters contact-wrap">
            <div class="col-md-12">
                <div class="form h-100">
                    <h3>Create Article</h3>
                    <form class="mb-5" method="post">
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="CreateArticle.Title" class="col-form-label">Title* </label>
                                <input asp-for="CreateArticle.Title" class="form-control" placeholder="Write Title" ></input>
                                <span class="text-danger" asp-validation-for="CreateArticle.Title"></span>
                            </div>

                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="CreateArticle.Image" class="col-form-label">Image Path* </label>
                                <input asp-for="CreateArticle.Image" class="form-control"  placeholder="Enter Your Image Path" ></input>
                                <span class="text-danger" asp-validation-for="CreateArticle.Image"></span>
                            </div>

                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="CreateArticle.ShortDescription"  class="col-form-label">ShortDescription *</label>
                                <input asp-for="CreateArticle.ShortDescription"  class="form-control"  placeho holder="ShortDescription" >
                                <span class="text-danger" asp-validation-for="CreateArticle.ShortDescription"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="CreateArticle.ArticleCategoryId" class="col-form-label form-check">Select Article Category *</label>
                                <select asp-for="CreateArticle.ArticleCategoryId" class="custom-select" asp-items="Model.SelectCategoryListItems">
                                    <option selected>Choose...</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CreateArticle.ArticleCategoryId"></span>
                                </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group mb-3">
                                <label asp-for="CreateArticle.Content" class="col-form-label">Content </label>
                                <textarea asp-for="CreateArticle.Content" class="form-control" cols="30" rows="4" placeholder="Write your Content"></textarea>
                                <span class="text-danger" asp-validation-for="CreateArticle.Content"></span>
                                </div>
                              
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <input type="submit" value="Send Message" class="btn btn-primary rounded py-2 px-4">
                                <span class="text-danger" class="submitting"></span>
                            </div>
                        </div>
                    </form>
                    
               
                </div>
            </div>
        </div>
    </div>

</div>
