@page
@model MasterArticleBloger.Areas.Adminstrator.Pages.ArticleCategoryManagement.IndexModel
@{
}

<div  class="card">
    <div class="card-header">
        <h3 class="float-left">Article Category List</h3>
        <div class="float-right">
            <a class="btn btn-success"  asp-area="Adminstrator" asp-page="/ArticleCategoryyManagement/Create">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-dark ">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Status</th>
                <th scope="col">Creation Date</th>
                <th scope="col">Update</th>
                <th scope="col">Change Status</th>
            </tr>
            </thead>
            <tbody class="table-light text-dark table-hover">
            @{
                int i = 1; 
            }
            @foreach (var article in Model.ArticleCategoriesViews)
            {
                <tr class="table-hover">
                    <th scope="row">@(i)</th>
                    <td>@article.Id</td>
                    <td>@article.Title</td>
                    <td>@if (@article.IsDeleted)
                        {
                            <i class="fa fa-close fa-2x text-danger"></i>
                        }
                        else
                        {
                            <i class="fa fa-check fa-2x text-success"></i>
                        }
                    </td>
                    <td>@article.CreationDate</td>
                    <td><a asp-area="Adminstrator" asp-page="/ArticleCategoryyManagement/Update" asp-route-id="@article.Id" class="btn btn-warning">Update</a></td>
                    <td>
                        <form method="post" asp-page-handler="ReStatus">
                        @if (article.IsDeleted)
                        {
                            <button type="submit" class="btn btn-success">Active</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger">Delete</button>
                        }
                            <input type="hidden" name="id" value="@article.Id"/>
                        </form>
                    </td>
                    </tr>
                i++;
            }
            </tbody>
        </table>
    </div>
</div>